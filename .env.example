# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (PostgreSQL)
# For Docker: Use 'host.docker.internal' instead of 'localhost' to access host machine
# For local run: Use 'localhost'
DATABASE_URL=jdbc:postgresql://host.docker.internal:5432/leave_management?useSSL=false&serverTimezone=UTC
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-long-for-security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Server Port (optional, defaults to 8080)
PORT=8080
